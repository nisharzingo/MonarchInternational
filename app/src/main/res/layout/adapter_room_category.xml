<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_item_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#ffffffff"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView android:id="@+id/scrollbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:fillViewport="true"
        android:layout_margin="0dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/category_image"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="180dp"
                android:background="@drawable/no_image"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/category_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/gen_black"/>

                </LinearLayout>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmer_view_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.mohan.ribbonview.RibbonView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/dis_sell"
                            android:text=""
                            android:gravity="center"
                            app:ribbonGravity="right"
                            android:layout_gravity="right"
                            android:textSize="12dp"
                            android:textColor="#fff"/>

                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:orientation="vertical">

                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textSize="16dp"
                            android:textColor="@color/gen_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="• Full A/C, full sleeve"
                            android:textSize="12dp"
                            android:textColor="@color/gen_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="• Fabric: Cotton"
                            android:textSize="12dp"
                            android:textColor="@color/gen_black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="• Pattern: printed"
                            android:textSize="12dp"
                            android:textColor="@color/gen_black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:visibility="gone"
                            android:paddingBottom="2dp"
                            android:id="@+id/image_url1"
                            android:paddingRight="5dp"
                            android:text=""
                            android:textSize="18dp"
                            android:textColor="#fff"
                            android:layout_marginLeft="16dp"
                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/room_price_dis_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:background="@drawable/text_striker"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:layout_gravity="right"
                        android:textColor="@color/grey_dark"
                        />

                    <TextView
                        android:id="@+id/room_price_dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:textColor="@color/gen_black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="per room/night"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:layout_gravity="right"
                        android:textColor="@color/grey_dark"/>

                    <Button
                        android:id="@+id/book_now"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="right"
                        android:textColor="@color/White"
                        android:text="@string/book_now"
                        android:gravity="center"
                        android:background="@drawable/book_now"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>