<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Activities.RestaurantMenuScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/total_pay">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <details.hotel.app.monarchint.Customs.CustomAdapters.AutoScrollImageAdapter
                        android:id="@+id/rest_images_scroller"
                        android:layout_width="match_parent"
                        android:clickable="true"
                        android:layout_height="250dp"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/category_image"
                        android:src="@drawable/no_image"
                        android:scaleType="fitXY"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:id="@+id/dis_sell"
                            android:paddingRight="5dp"
                            android:text="Save ₹ 100"
                            android:visibility="gone"
                            android:layout_gravity="right"
                            android:background="#FF0000"
                            android:textSize="16dp"
                            android:textColor="#fff"
                            android:layout_marginLeft="16dp"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="30dp">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:id="@+id/category_name"
                                    android:paddingRight="5dp"
                                    android:text=""
                                    android:background="@drawable/round_grey"
                                    android:textSize="18dp"
                                    android:textColor="#fff"
                                    android:layout_marginLeft="16dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="2dp"
                                    android:visibility="gone"
                                    android:paddingBottom="2dp"
                                    android:id="@+id/image_url"
                                    android:paddingRight="5dp"
                                    android:text=""
                                    android:background="@drawable/round_grey"
                                    android:textSize="18dp"
                                    android:textColor="#fff"
                                    android:layout_marginLeft="16dp"
                                    />



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:visibility="gone"
                                android:background="@drawable/round_grey"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/room_price_dis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="16dp"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="2dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="2dp"

                                    android:text="₹ 499"
                                    android:textColor="#fff"
                                    android:textSize="22dp" />

                                <TextView
                                    android:id="@+id/room_price_dis_sell"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"

                                    android:layout_marginLeft="16dp"
                                    android:background="@drawable/text_striker"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="2dp"
                                    android:paddingRight="5dp"

                                    android:text="₹ 799"
                                    android:textColor="#fff"
                                    android:textSize="16dp" />


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>



                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="left|center_horizontal"
                        android:layout_gravity="left|center_horizontal"
                        android:layout_weight="5"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:id="@+id/description"
                            android:textSize="16dp"
                            android:textColor="@color/txt_color_black"
                            />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/category_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:paddingTop="0dp"
                            android:layout_alignParentTop="true"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                            />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/total_pay"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary">
        <details.hotel.app.monarchint.Customs.CustomFonts.TextViewRobotoregular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txttotal"
            android:text="TOTAL : "
            android:textSize="18sp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:layout_weight="1">
            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewRobotoregular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtorder"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="PAY"/>
            <!--<ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/darker_gray"
                android:src="@drawable/ic_arrow_forward_black_24dp"/>-->
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>