<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="details.hotel.app.monarchint.UI.Fragments.ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/toolbar_contact"
        android:orientation="vertical">

        <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hotel_name"
            android:text=""
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"

            />

        <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_margin="5dp"
            android:paddingTop="10dp"
            android:textColor="#6e6e6e"
            android:textSize="16sp"
            android:text=""
            android:drawableLeft="@drawable/hotel_location"
            android:id="@+id/hotel_address"
            android:paddingBottom="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:id="@+id/phone_number_lay"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/phone"
                />

            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewRobotoregular

                android:layout_weight="1"
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="#6e6e6e"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/email_lay"
            android:layout_margin="5dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/mail"
                />

            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewRobotoregular
                android:layout_weight="1"
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="#6e6e6e"
                />







        </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/hotel_location_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#000"
        app:contentInsetEnd="0dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/toolbar_contact"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:layout_behavior="customfonts.ScrollingToolbarBehavior">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="#000000"
            android:orientation="vertical"
            app:layout_behavior="customfonts.ScrollingToolbarBehavior">




            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="For inquiry, lets chat on whatsapp"
                android:textColor="#ffffff"
                android:textSize="11.3sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/call_gradient_rect"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/whatsapp_open"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/whatsaoo_icon" />

                    <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                        android:id="@+id/number_whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="12.7sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>


</RelativeLayout>
