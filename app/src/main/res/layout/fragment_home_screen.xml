<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hotel_home_base"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="details.hotel.app.monarchint.UI.Fragments.HomeScreenFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_nested_scroll"
        android:layout_above="@+id/bottom_lay"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <details.hotel.app.monarchint.Customs.CustomAdapters.AutoScrollImageAdapter
                    android:id="@+id/hotel_images_scroller"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    />


<!--
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:id="@+id/loader"
                    android:src="@drawable/loader_square"/>
-->


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/offer_layout"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deals For You!!!"
                    android:visibility="gone"
                    android:textColor="#000000"

                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/offer_image_scroller"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:padding="5dp"
                    android:clipToPadding="false"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/hotel_contact_image"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/hotel_contact"/>


                            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/txt_color_black"
                                android:textSize="12sp"
                                android:text="Contact Us"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/hotel_gallery_image"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/hotel_gallery"/>


                            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/txt_color_black"
                                android:textSize="12sp"
                                android:text="Gallery"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/hotel_amenity_image"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/hotel_amenity"/>


                            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:text="Amenities"
                                android:textColor="@color/txt_color_black"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/hotel_room_image"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/hotel_bed"/>


                            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/txt_color_black"
                                android:textSize="12sp"
                                android:text="Rooms"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/hotel_location_image"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/hotel_location"/>


                            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/txt_color_black"
                                android:textSize="12sp"
                                android:text="Location"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/hotel_book_image"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/hotel_book"/>


                            <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/txt_color_black"
                                android:textSize="12sp"
                                android:text="Book Now"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_margin="2dp"
                                android:id="@+id/about_us"
                                android:visibility="gone"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:id="@+id/hotel_about_us"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/colorPrimary"
                                    app:srcCompat="@drawable/ic_hotel"/>


                                <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/txt_color_black"
                                    android:textSize="12sp"
                                    android:text="About Us"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="3dp"/>
                            </LinearLayout>



                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_margin="2dp"
                                android:id="@+id/rest_lay_menu"
                                android:visibility="gone"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:id="@+id/hotel_rest"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/colorPrimary"
                                    app:srcCompat="@drawable/ic_menu_rest"/>


                                <details.hotel.app.monarchint.Customs.CustomFonts.TextViewSFProDisplayRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/txt_color_black"
                                    android:textSize="12sp"
                                    android:text="Restaurant"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="3dp"/>
                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_margin="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facilities"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>


                <GridView
                    android:id="@+id/grid_view_image_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="80dp"
                    android:gravity="center"
                    android:numColumns="auto_fit" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/rest_layout"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Restaurants!!!"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/restaurants_pager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:clipToPadding="false"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City Guide!!!"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:visibility="gone"
                    android:id="@+id/things_do"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/category_image"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bangalore_img" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="30dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">


                                        <TextView
                                            android:id="@+id/rest_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="16dp"
                                            android:background="@drawable/round_grey"

                                            android:paddingLeft="5dp"
                                            android:paddingTop="2dp"
                                            android:paddingRight="5dp"
                                            android:paddingBottom="2dp"
                                            android:text="Your City Guide"
                                            android:textColor="#fff"
                                            android:textSize="18dp" />

                                        <TextView
                                            android:id="@+id/image_url"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="16dp"
                                            android:background="@drawable/round_grey"
                                            android:paddingLeft="5dp"
                                            android:paddingTop="2dp"
                                            android:paddingRight="5dp"
                                            android:paddingBottom="2dp"
                                            android:text=""
                                            android:textColor="#fff"
                                            android:textSize="18dp"
                                            android:visibility="gone" />


                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>


                        </FrameLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/bottom_lay"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:id="@+id/whatsapp_icon"
                android:src="@drawable/whatsaoo_icon"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/phone_icon"
                android:padding="5dp"
                android:src="@drawable/home_phone"
                />



        </LinearLayout>




    </LinearLayout>

</RelativeLayout>
