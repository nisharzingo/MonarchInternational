<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:id="@+id/vertical_blogs"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <details.hotel.app.monarchint.Customs.CustomAdapters.AutoScrollImageAdapter
                    android:id="@+id/hotel_images_scroller"
                    android:layout_width="match_parent"
                    android:clickable="false"
                    android:layout_height="250dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"

                    android:id="@+id/category_image"
                    android:src="@drawable/no_image"
                    android:scaleType="fitXY"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:id="@+id/dis_sell"
                        android:paddingRight="5dp"
                        android:text="Save Rs.0"
                        android:layout_gravity="right"
                        android:background="#FF0000"
                        android:textSize="16dp"
                        android:textColor="#fff"
                        android:layout_marginLeft="16dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="30dp"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/category_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:background="@drawable/round_grey"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text=""
                                android:textColor="#fff"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/image_url"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:background="@drawable/round_grey"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text=""
                                android:textColor="#fff"
                                android:textSize="18dp"
                                android:visibility="gone" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"

                            android:background="@drawable/round_grey"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/room_price_dis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginLeft="16dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"

                                android:text="Rs 0"
                                android:textColor="#fff"
                                android:textSize="22dp" />

                            <TextView
                                android:id="@+id/room_price_dis_sell"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"

                                android:layout_marginLeft="16dp"
                                android:background="@drawable/text_striker"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"

                                android:text="Rs 0"
                                android:textColor="#fff"
                                android:textSize="16dp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>



            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left|center_horizontal"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_weight="5"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/description"
                        android:textSize="16dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/txt_color_black"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:id="@+id/read_option"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/read_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_below="@+id/activity_about"
                            android:layout_marginRight="10dp"
                            android:clickable="true"
                            android:text="Read More"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/read_less"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/activity_about"
                            android:layout_marginRight="10dp"
                            android:clickable="true"
                            android:text="Read Less"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">



                        <Button
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:text="Book Now"
                            android:id="@+id/book_category"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="#fff"
                            android:background="@drawable/button_background"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
